<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mini Message Board</title>
   
    <!-- <link rel = "stylesheet" href="/styles.css"> -->
  </head>
  <body>
    <p>
    <a href="/" style="margin-right: 10px;">Home</a>
    <a href="/new">New Message</a>
  </p>
    
    <h1>Messages</h1>
    <div>
        
        <% messages.forEach((msg , index)=>{ %>
         <p>User:<%= msg.user %></p>
         <p>Message:<%= msg.text %></p>
         <a href="/messages/<%=msg.id%>">Details</a>   
         <hr>
        <%})%>
    </div>
    <button ><a href="/new">Add New Message:</button></a>
    <%- include('footer') %>
    <script></script>
  </body>
</html>